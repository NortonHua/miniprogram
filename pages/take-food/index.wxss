.container{
    margin-top: 20rpx;
    box-sizing: border-box;
    background-color: #ffffff;
    display:flex;
    flex-direction: column;
    /*height: 350rpx;*/
    width: 690rpx;
    box-shadow:0px 0px 8px 0px rgba(119,163,149,0.2);
    border-radius: 4rpx;
}

.header{
    color: #999999;
    font-size: 24rpx;
    height:80rpx ;
    border-bottom: 1px solid #f7f7f7;
    display:flex;
    flex-direction:row;
    align-items: center;
    justify-content: space-between;
    padding-left:30rpx;
    padding-right:30rpx;
}

.header >text:first-child{
    /*letter-spacing: 1rpx;*/
}

.status-text{
    color: #9E2731;
}


.hidden-text{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.main{
    padding:30rpx 30rpx;
    box-sizing: border-box;
    display:flex;
    flex-direction:row;
    /*flex: 1;*/
    /*height:100rpx;*/
}

.img{
    display: flex;
    height: 130rpx;
    width: 130rpx;
    margin-right:30rpx;
    flex: 0 0 auto;
}

.total-container{
    font-size:24rpx;
    padding-left:30rpx;
    padding-right:30rpx;
    border-top: 1px solid #f9f9f9;
    height:70rpx;
    display:flex;
    flex-direction:row;
    justify-content: flex-end;
    align-items: center;
}

.bottom-left{
    display:flex;
    flex-direction:row;
    align-items: center;
}

.countdown{
    margin-left: 20rpx;
}

.countdown-time{
    /*background-color: #9E2731 !important;*/
    /*background-color: #157658 !important;*/
    /*background-color: #9E2731;*/
    color: #9E2731 ;
    background-color: #FFE7E9 !important;
    font-size:24rpx !important;
    width:38rpx !important;
    height: 38rpx !important;
}


.price-container{
    display:flex;
    flex-direction:row;
    align-items: center;
    margin-left: 30rpx;
}

.price-container > text:first-child{
    margin-right: 20rpx;
    color: #666666;
}

.final-total-price{
    display: flex;
    justify-content: flex-start;
}

.description{
    display:flex;
    flex-direction:column;
    flex:1;
    justify-content: space-between;
}

.title{
    color: #333333;
    font-size: 24rpx;
}


.counter{
    display:flex;
    flex-direction:row;
    justify-content: space-between;
    align-items: center;
    color: #999999;
    font-size: 24rpx;
}

.confirmTakeFood{
    margin-left: 10rpx;
    margin-bottom: 10rpx;
}

.container-top{
    width: 100%;
